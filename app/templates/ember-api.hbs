<h1>Ember API</h1>

<div class="row">
  <div class="col-2">
    <button
      class="btn btn-primary my-2"
      {{on "click" this.loadItems}}>
      Load
    </button>
  </div>
</div>

<ul>
{{#each this.items as |item|}}
  <li>{{item.title}}</li>
{{else if this.inProgress}}
  <Placeholder />
{{/each}}
</ul>